             x:Class="Final_App.HomePage"
             Title="HomePage"
             NavigationPage.HasNavigationBar="True">
    <AbsoluteLayout>
        <Button 
        x:Name="start"
        Text="START"
        FontSize="60"
        FontAttributes="Bold"
        AbsoluteLayout.LayoutBounds="0, 1, 0.5, 1"
        AbsoluteLayout.LayoutFlags="All"
        Clicked="start_Clicked"
         />

        <Button 
        x:Name="practice"
        Text="PRACTICE"
        FontSize="60"
        FontAttributes="Bold"
        AbsoluteLayout.LayoutBounds="1, 1, 0.5, 1"
        AbsoluteLayout.LayoutFlags="All"
        Clicked="practice_Clicked"
         />
    </AbsoluteLayout>
