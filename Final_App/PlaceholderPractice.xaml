<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_App.PlaceholderPractice"
             Title="PlaceholderPractice">
    <AbsoluteLayout>
        <Button
        BorderColor="Black"
        BackgroundColor="White"
        AbsoluteLayout.LayoutBounds="0.5,0.5,0.75,0.5"
        AbsoluteLayout.LayoutFlags="All"
        CornerRadius="5">
        </Button>
        <Label
        Text="Filler"
        TextColor="Black"
        AbsoluteLayout.LayoutBounds="0.5,0.5"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        />
        <HorizontalStackLayout AbsoluteLayout.LayoutBounds="0.6,0.4" AbsoluteLayout.LayoutFlags="PositionProportional">
            <Button
            BackgroundColor="Transparent"
            BorderColor="Transparent"
            Text="Correct"
            TextColor="Black"
            >

            </Button>
            <Button
            BackgroundColor="Transparent"
            BorderColor="Transparent"
            Text="Incorrect"
            TextColor="Black"
            >
            </Button>
        </HorizontalStackLayout>
        
    </AbsoluteLayout>
</ContentPage>
